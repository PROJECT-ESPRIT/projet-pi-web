{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>

    <div class="row align-items-center mb-3">
        <div class="col-md-7">
            <form method="get" class="row g-2">
                <div class="col-sm-8">
                    <input
                        type="text"
                        name="q"
                        value="{{ q }}"
                        class="form-control"
                        placeholder="Recherche: email, nom, prenom, role"
                    >
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                </div>
                <input type="hidden" name="page" value="1">
                <div class="col-sm-6">
                    <select name="sort" class="form-select">
                        <option value="id" {{ sort == 'id' ? 'selected' : '' }}>Trier par id</option>
                        <option value="nom" {{ sort == 'nom' ? 'selected' : '' }}>Trier par nom</option>
                        <option value="prenom" {{ sort == 'prenom' ? 'selected' : '' }}>Trier par prenom</option>
                        <option value="email" {{ sort == 'email' ? 'selected' : '' }}>Trier par email</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <select name="dir" class="form-select">
                        <option value="asc" {{ dir == 'asc' ? 'selected' : '' }}>Ordre croissant</option>
                        <option value="desc" {{ dir == 'desc' ? 'selected' : '' }}>Ordre decroissant</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="col-md-5 text-end mt-2 mt-md-0">
            <a href="{{ path('app_user_stats') }}" class="btn btn-outline-primary me-2">Statistiques</a>
            <a href="{{ path('app_user_new') }}" class="btn btn-success">Creer un nouvel utilisateur</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                {% set baseParams = { q: q, page: 1 } %}
                <th>
                    <a href="{{ path('app_user_index', baseParams|merge({ 'sort': 'email', 'dir': sort == 'email' and dir == 'asc' ? 'desc' : 'asc' })) }}">
                        Email
                    </a>
                </th>
                <th>
                    <a href="{{ path('app_user_index', baseParams|merge({ 'sort': 'nom', 'dir': sort == 'nom' and dir == 'asc' ? 'desc' : 'asc' })) }}">
                        Nom
                    </a>
                </th>
                <th>
                    <a href="{{ path('app_user_index', baseParams|merge({ 'sort': 'prenom', 'dir': sort == 'prenom' and dir == 'asc' ? 'desc' : 'asc' })) }}">
                        Prenom
                    </a>
                </th>
                <th>Roles</th>
                <th>Niveau participant</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>
                    {% for role in user.roles %}
                        {% set roleLabel = role|replace({'ROLE_': ''}) %}
                        {% set roleClass = role == 'ROLE_ADMIN'
                            ? 'bg-danger'
                            : (role == 'ROLE_ARTISTE'
                                ? 'bg-info text-dark'
                                : (role == 'ROLE_PARTICIPANT'
                                    ? 'bg-primary'
                                    : 'bg-secondary')) %}
                        <span class="badge {{ roleClass }}">{{ roleLabel }}</span>
                    {% endfor %}
                </td>
                <td>
                    {% if 'ROLE_PARTICIPANT' in user.roles %}
                        {% set level = user.loyaltyLevel|default('BRONZE') %}
                        {% set levelClass = level == 'GOLD' ? 'bg-warning text-dark' : (level == 'SILVER' ? 'bg-secondary' : 'bg-dark') %}
                        <span class="badge {{ levelClass }}">{{ level }}</span>
                        <span class="badge bg-light text-dark">{{ user.points|default(0) }} pts</span>
                    {% else %}
                        -
                    {% endif %}
                </td>
                <td>
                    {% if user.status == 'APPROVED' %}
                        <span class="badge bg-success">APPROVED</span>
                    {% elseif user.status == 'REJECTED' %}
                        <span class="badge bg-danger">REJECTED</span>
                    {% else %}
                        <span class="badge bg-warning text-dark">PENDING</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-primary">Editer</a>
                    {% if app.user and app.user.id != user.id %}
                        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer cet utilisateur ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    {% endif %}
                    {% if 'ROLE_ARTISTE' in user.roles %}
                        {% if user.status == 'PENDING' %}
                            <form method="post" action="{{ path('app_user_approve', {'id': user.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-success">Valider</button>
                            </form>
                            <form method="post" action="{{ path('app_user_reject', {'id': user.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Refuser</button>
                            </form>
                        {% elseif user.status == 'APPROVED' %}
                            <form method="post" action="{{ path('app_user_reject', {'id': user.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ user.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Refuser</button>
                            </form>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun utilisateur trouve</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if total_pages > 1 %}
        <nav aria-label="Pagination">
            <ul class="pagination">
                <li class="page-item {{ page == 1 ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('app_user_index', { q: q, sort: sort, dir: dir, page: page - 1 }) }}">Precedent</a>
                </li>
                {% for p in 1..total_pages %}
                    <li class="page-item {{ p == page ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('app_user_index', { q: q, sort: sort, dir: dir, page: p }) }}">{{ p }}</a>
                    </li>
                {% endfor %}
                <li class="page-item {{ page == total_pages ? 'disabled' : '' }}">
                    <a class="page-link" href="{{ path('app_user_index', { q: q, sort: sort, dir: dir, page: page + 1 }) }}">Suivant</a>
                </li>
            </ul>
        </nav>
    {% endif %}
{% endblock %}

