{% extends 'base.html.twig' %}

{% block title %}√âv√©nements{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
{# ===================== ADMIN VIEW ===================== #}
<style>
    .bo-table .ev-places-bar { display:inline-flex; align-items:center; gap:.4rem; }
    .bo-table .ev-places-track { width:45px; height:5px; border-radius:3px; background:rgba(30,15,117,.06); overflow:hidden; }
    .bo-table .ev-places-fill { height:100%; border-radius:3px; }
</style>

<div class="bo-page-header">
    <h1>
        <i class="fas fa-calendar-alt"></i> √âv√©nements
        <span class="badge">{{ total }}</span>
    </h1>
    <div class="bo-actions">
        <a href="{{ path('app_evenement_new') }}" class="btn btn-primary"><i class="fas fa-plus me-1"></i> Nouveau</a>
    </div>
</div>

<form method="get" action="{{ path('app_evenement_index') }}" class="bo-filter-bar">
    <div class="row g-2 align-items-end">
        <div class="col-12 col-md-3">
            <label><i class="fas fa-search me-1"></i>Recherche</label>
            <input type="text" name="q" class="form-control" value="{{ filter_input.q|default('') }}" placeholder="Titre, lieu, organisateur‚Ä¶">
        </div>
        <div class="col-6 col-md-2">
            <label><i class="fas fa-map-marker-alt me-1"></i>Lieu</label>
            <input type="text" name="lieu" class="form-control" value="{{ filter_input.lieu|default('') }}" placeholder="Ville / lieu">
        </div>
        <div class="col-6 col-md-2">
            <label><i class="fas fa-calendar me-1"></i>Date d√©but</label>
            <input type="date" name="date_start" class="form-control" value="{{ filter_input.date_start|default('') }}">
        </div>
        <div class="col-6 col-md-2">
            <label><i class="fas fa-calendar-check me-1"></i>Date fin</label>
            <input type="date" name="date_end" class="form-control" value="{{ filter_input.date_end|default('') }}">
        </div>
        <div class="col-6 col-md-3">
            <label><i class="fas fa-sort me-1"></i>Tri</label>
            <select name="sort" class="form-select">
                <option value="date_asc" {{ filter_input.sort == 'date_asc' ? 'selected' }}>Date ‚Üë</option>
                <option value="date_desc" {{ filter_input.sort == 'date_desc' ? 'selected' }}>Date ‚Üì</option>
                <option value="prix_asc" {{ filter_input.sort == 'prix_asc' ? 'selected' }}>Prix ‚Üë</option>
                <option value="prix_desc" {{ filter_input.sort == 'prix_desc' ? 'selected' }}>Prix ‚Üì</option>
                <option value="titre_asc" {{ filter_input.sort == 'titre_asc' ? 'selected' }}>Titre A‚ÜíZ</option>
                <option value="titre_desc" {{ filter_input.sort == 'titre_desc' ? 'selected' }}>Titre Z‚ÜíA</option>
            </select>
        </div>
        <div class="col-6 col-md-1">
            <label><i class="fas fa-coins me-1"></i>Min</label>
            <input type="number" step="0.01" name="prix_min" class="form-control" value="{{ filter_input.prix_min|default('') }}" placeholder="0">
        </div>
        <div class="col-6 col-md-1">
            <label><i class="fas fa-coins me-1"></i>Max</label>
            <input type="number" step="0.01" name="prix_max" class="form-control" value="{{ filter_input.prix_max|default('') }}" placeholder="‚àû">
        </div>
        <div class="col-12 col-md-4 col-lg-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-grow-1">
                <span class="btn-label"><i class="fas fa-search me-1"></i> Filtrer</span>
                <span class="btn-spinner" style="display:none;"><i class="fas fa-spinner fa-spin me-1"></i></span>
            </button>
            <a class="btn btn-outline-secondary" href="{{ path('app_evenement_index') }}"><i class="fas fa-undo me-1"></i>Reset</a>
        </div>
    </div>
</form>

<div class="bo-table-card">
    {% if evenements is not empty %}
        <div class="table-responsive">
            <table class="table bo-table">
                <thead>
                    <tr>
                        <th>#</th><th>√âv√©nement</th><th>Date</th><th>Statut</th><th>Lieu</th><th>Places</th><th>Prix</th><th>Organisateur</th><th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for ev in evenements %}
                    {% set nowTs = "now"|date('U') %}
                    {% set evStartTs = ev.dateDebut ? ev.dateDebut|date('U') : 0 %}
                    {% set isPassedAdmin = ev.dateDebut and evStartTs < nowTs %}
                    {% set fillPct = ev.nbPlaces > 0 ? ((ev.reservations|length / ev.nbPlaces) * 100)|round : 0 %}
                    {% if isPassedAdmin %}
                        {% set statusBadge = 'Pass√©' %}{% set statusClass = 'bg-secondary' %}
                    {% else %}
                        {% set today = "now"|date('Y-m-d') %}{% set tomorrow = "now"|date_modify('+1 day')|date('Y-m-d') %}
                        {% set evDay = ev.dateDebut|date('Y-m-d') %}{% set evWeek = ev.dateDebut|date('Y-W') %}{% set nowWeek = "now"|date('Y-W') %}
                        {% if evDay == today %}{% set statusBadge = 'Aujourd\'hui' %}{% set statusClass = 'bg-success' %}
                        {% elseif evDay == tomorrow %}{% set statusBadge = 'Demain' %}{% set statusClass = 'bg-primary' %}
                        {% elseif evWeek == nowWeek %}{% set statusBadge = 'Cette semaine' %}{% set statusClass = 'bg-info' %}
                        {% else %}{% set daysLeft = ((evStartTs - nowTs) / 86400)|round %}{% set statusBadge = daysLeft > 0 ? ('J-' ~ daysLeft) : '‚Äî' %}{% set statusClass = 'bg-light text-dark' %}{% endif %}
                    {% endif %}
                    <tr style="{{ isPassedAdmin ? 'opacity:.7;' : '' }}">
                        <td class="text-muted" style="font-size:.78rem;">{{ ev.id }}</td>
                        <td>
                            <div class="fw-semibold" style="color:var(--ac-deep);">{{ ev.titre }}</div>
                            <small class="text-muted" style="font-size:.72rem;">{{ ev.description|length > 55 ? ev.description|slice(0, 55) ~ '‚Ä¶' : ev.description }}</small>
                        </td>
                        <td style="white-space:nowrap;">
                            <div style="font-weight:600;">{{ ev.dateDebut ? ev.dateDebut|date('d/m/Y') : '‚Äî' }}</div>
                            <small class="text-muted" style="font-size:.72rem;">{{ ev.dateDebut ? ev.dateDebut|date('H:i') : '' }}{{ ev.dateFin ? ' ‚Üí ' ~ ev.dateFin|date('H:i') : '' }}</small>
                        </td>
                        <td><span class="badge {{ statusClass }}">{{ statusBadge }}</span></td>
                        <td style="font-size:.82rem;">{{ ev.lieu }}</td>
                        <td>
                            <div class="ev-places-bar">
                                <div class="ev-places-track">
                                    <div class="ev-places-fill" style="width:{{ fillPct }}%; background:{% if fillPct < 50 %}linear-gradient(90deg,#059669,#34d399){% elseif fillPct < 80 %}linear-gradient(90deg,#d97706,#fbbf24){% else %}linear-gradient(90deg,#dc2626,#f87171){% endif %};"></div>
                                </div>
                                <span style="font-size:.75rem; font-weight:600; color:#6b7280;">{{ ev.reservations|length }}/{{ ev.nbPlaces }}</span>
                            </div>
                        </td>
                        <td>
                            {% if ev.prix %}
                                <span style="font-weight:700; color:var(--ac-deep);">{{ ev.prix }} TND</span>
                            {% else %}
                                <span class="badge bg-success">Gratuit</span>
                            {% endif %}
                        </td>
                        <td>
                            <div style="display:flex; align-items:center; gap:.4rem;">
                                <span style="width:24px; height:24px; border-radius:8px; background:linear-gradient(135deg,var(--ac-deep),var(--ac-blue)); color:#fff; display:inline-flex; align-items:center; justify-content:center; font-size:.6rem; font-weight:700;">{{ ev.organisateur.prenom|first }}{{ ev.organisateur.nom|first }}</span>
                                <span style="font-size:.82rem;">{{ ev.organisateur.prenom }} {{ ev.organisateur.nom|first }}.</span>
                            </div>
                        </td>
                        <td class="text-end">
                            <div class="d-flex gap-1 justify-content-end">
                                <a href="{{ path('app_evenement_show', {id: ev.id}) }}" class="btn-action btn-view" title="Voir"><i class="fas fa-eye"></i></a>
                                <a href="{{ path('app_evenement_edit', {id: ev.id}) }}" class="btn-action btn-edit" title="√âditer"><i class="fas fa-pen"></i></a>
                                {% if ev.reservations|length > 0 %}
                                <a href="{{ path('app_evenement_cancel', {id: ev.id}) }}" class="btn-action btn-edit" title="Annuler l'√©v√©nement"><i class="fas fa-ban"></i></a>
                                {% else %}
                                <form method="post" action="{{ path('app_evenement_delete', {id: ev.id}) }}" class="d-inline" data-confirm-title="Supprimer cet √©v√©nement" data-confirm="Cette action est irr√©versible. Voulez-vous continuer ?">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ev.id) }}">
                                    <button class="btn-action btn-del" title="Supprimer"><i class="fas fa-trash"></i></button>
                                </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% if total_pages > 1 %}
            {% set qp = filter_input|default({}) %}
            <div class="bo-pagination">
                <div class="page-info">Page {{ page }} sur {{ total_pages }} ‚Äî {{ total }} r√©sultat{{ total > 1 ? 's' }}</div>
                <nav><ul class="pagination">
                    <li class="page-item {{ page == 1 ? 'disabled' }}"><a class="page-link" href="{{ path('app_evenement_index', qp|merge({page: page - 1})) }}"><i class="fas fa-chevron-left"></i></a></li>
                    {% for p in 1..total_pages %}<li class="page-item {{ p == page ? 'active' }}"><a class="page-link" href="{{ path('app_evenement_index', qp|merge({page: p})) }}">{{ p }}</a></li>{% endfor %}
                    <li class="page-item {{ page == total_pages ? 'disabled' }}"><a class="page-link" href="{{ path('app_evenement_index', qp|merge({page: page + 1})) }}"><i class="fas fa-chevron-right"></i></a></li>
                </ul></nav>
            </div>
        {% endif %}
    {% else %}
        <div class="bo-empty"><i class="fas fa-calendar-times"></i><p>Aucun √©v√©nement trouv√©</p></div>
    {% endif %}
</div>

{% else %}
{# ===================== FRONTOFFICE ‚Äî same cards as home ===================== #}
<style>
    .fo-ev-header {
        display: flex; justify-content: space-between; align-items: center;
        margin-bottom: 1rem; padding-bottom: .5rem;
        border-bottom: 2px solid rgba(30,15,117,.06);
    }
    .fo-ev-header h1 {
        margin: 0; font-family: 'Sora', sans-serif;
        font-size: 1.5rem; font-weight: 700; color: var(--ac-deep);
        display: flex; align-items: center; gap: .5rem;
    }
    .fo-ev-header .badge { font-size: .72rem; border-radius: 8px; }

    /* ===== FILTER BAR ‚Äî same as home ===== */
    .filter-bar {
        background: #fff;
        border-radius: 16px;
        padding: 0.8rem 1rem;
        box-shadow: 0 4px 16px rgba(30,15,117,0.06);
        border: 1px solid rgba(30,15,117,0.08);
        margin-bottom: 1.5rem;
        display: flex; align-items: center; gap: 0.6rem;
        flex-wrap: wrap;
    }
    .filter-tabs {
        display: flex; gap: 0.3rem;
        background: #f4f2fc;
        border-radius: 12px;
        padding: 0.25rem;
    }
    .filter-tab {
        padding: 0.45rem 1rem;
        border-radius: 10px;
        border: none;
        font-size: 0.82rem;
        font-weight: 600;
        color: #666;
        background: transparent;
        cursor: pointer;
        transition: all 0.25s;
        white-space: nowrap;
        text-decoration: none;
        display: inline-flex; align-items: center;
    }
