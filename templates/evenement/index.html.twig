    .ev-card-price-tag {
        position: absolute; top: 12px; right: 12px;
        padding: .3rem .7rem; border-radius: 10px;
        font-size: .75rem; font-weight: 700; backdrop-filter: blur(8px);
    }
    .ev-card-price-tag.free { background: rgba(25,135,84,.9); color: #fff; }
    .ev-card-price-tag.paid { background: rgba(255,193,7,.95); color: #1E0F75; }
    .ev-card-timing-badge {
        position: absolute; bottom: 8px; left: 12px;
        font-size: .65rem; font-weight: 700; padding: .22rem .55rem;
        border-radius: 8px; backdrop-filter: blur(8px); z-index: 2;
    }
    .ev-badge-today { background: linear-gradient(135deg,#059669,#10b981); color: #fff; }
    .ev-badge-tomorrow { background: linear-gradient(135deg,#2563eb,#3b82f6); color: #fff; }
    .ev-badge-week { background: linear-gradient(135deg,#7c3aed,#8b5cf6); color: #fff; }
    .ev-badge-days { background: linear-gradient(135deg,var(--ac-mid),var(--ac-lavender)); color: #fff; }
    .ev-badge-past { background: rgba(55,65,81,.85); color: #fff; }
    .ev-card-body { padding: 1rem 1.2rem 1.1rem; flex: 1; display: flex; flex-direction: column; }
