{# ---- Event Cards Grid ---- #}
{% if evenements is not empty %}
<div class="row g-3">
    {% set icons = ['üé®', 'üé≠', 'üéµ', 'üé™', 'üé¨', 'üé§', 'üñºÔ∏è', '‚ú®', 'üéª'] %}
    {% for ev in evenements %}
        {% set nowTs = "now"|date('U') %}
        {% set evStartTs = ev.dateDebut ? ev.dateDebut|date('U') : 0 %}
        {% set isPassed = ev.dateDebut and evStartTs < nowTs %}
        {% set reservedCount = ev.reservations|length %}
        {% set fillPct = ev.nbPlaces > 0 ? ((reservedCount / ev.nbPlaces) * 100)|round : 0 %}
        {% set isMine = app.user and ev.organisateur and app.user.id == ev.organisateur.id %}

        {% if not isPassed %}
            {% set today = "now"|date('Y-m-d') %}
            {% set tomorrow = "now"|date_modify('+1 day')|date('Y-m-d') %}
            {% set evDay = ev.dateDebut ? ev.dateDebut|date('Y-m-d') : '' %}
            {% set evWeek = ev.dateDebut ? ev.dateDebut|date('Y-W') : '' %}
            {% set nowWeek = "now"|date('Y-W') %}
            {% if evDay == today %}
                {% set timingLabel = "Aujourd'hui" %}{% set timingClass = 'ev-badge-today' %}
            {% elseif evDay == tomorrow %}
                {% set timingLabel = 'Demain' %}{% set timingClass = 'ev-badge-tomorrow' %}
            {% elseif evWeek == nowWeek %}
                {% set timingLabel = 'Cette semaine' %}{% set timingClass = 'ev-badge-week' %}
            {% else %}
                {% set daysLeft = ((evStartTs - nowTs) / 86400)|round %}
                {% set timingLabel = daysLeft > 0 ? ('J-' ~ daysLeft) : '' %}
                {% set timingClass = 'ev-badge-days' %}
            {% endif %}
        {% else %}
            {% set timingLabel = 'Pass√©' %}{% set timingClass = 'ev-badge-past' %}
        {% endif %}

        <div class="col-sm-6 col-lg-4" style="animation-delay:{{ loop.index0 * 0.05 }}s;">
            <a href="{{ path('app_evenement_show', {id: ev.id}) }}" class="text-decoration-none">
                <div class="ev-card {{ isPassed ? 'ev-past' : '' }}">
                    <div class="ev-card-img">
                        {% if ev.image %}
                            <img src="{{ ev.image }}" alt="{{ ev.titre }}" loading="lazy">
                        {% else %}
                            <div class="placeholder-art" style="background:linear-gradient({{ loop.index * 50 + 120 }}deg, rgba(30,15,117,.1), rgba(55,133,216,.15), rgba(191,140,225,.1));">
                                {{ icons[loop.index0 % icons|length] }}
                            </div>
                        {% endif %}
                        {% if ev.dateDebut %}
                            <div class="ev-card-date-badge">
                                <span class="day">{{ ev.dateDebut|date('d') }}</span>
                                <span class="month">{{ ev.dateDebut|date('M') }}</span>
                            </div>
                        {% endif %}
                        <div class="ev-card-price-tag {{ ev.prix ? 'paid' : 'free' }}">
                            {{ ev.prix ? ev.prix ~ ' TND' : 'Gratuit' }}
                        </div>
                        {% if timingLabel %}
                            <div class="ev-card-timing-badge {{ timingClass }}">
                                {% if isPassed %}<i class="fas fa-clock me-1"></i>{% endif %}{{ timingLabel }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="ev-card-body">
                        <h3>{{ ev.titre }}</h3>
                        <div class="ev-card-desc">{{ ev.description|length > 80 ? ev.description|slice(0, 80) ~ '...' : ev.description }}</div>
                        <div class="ev-card-info">
                            <div><i class="fas fa-map-marker-alt"></i> {{ ev.lieu }}</div>
                            <div><i class="fas fa-calendar-alt"></i> {{ ev.dateDebut ? ev.dateDebut|date('d/m/Y') : 'TBD' }}{% if ev.dateFin %} ‚Üí {{ ev.dateFin|date('d/m/Y') }}{% endif %}</div>
                            <div><i class="fas fa-clock"></i> {{ ev.dateDebut ? ev.dateDebut|date('H\\hi') : '' }}{% if ev.dateFin %} ‚Äî {{ ev.dateFin|date('H\\hi') }}{% endif %}</div>
                            {% if ev.ageMin or ev.ageMax %}
                                <div><i class="fas fa-child"></i>
                                    {% if ev.ageMin and ev.ageMax %}{{ ev.ageMin }} - {{ ev.ageMax }} ans
                                    {% elseif ev.ageMin %}D√®s {{ ev.ageMin }} ans
                                    {% else %}Jusqu'√† {{ ev.ageMax }} ans{% endif %}
                                </div>
                            {% endif %}
                        </div>
                        <div class="ev-card-footer">
                            {% if ev.organisateur %}
                                <div class="ev-card-organizer">
                                    <div class="avatar">{{ ev.organisateur.prenom|first }}{{ ev.organisateur.nom|first }}</div>
                                    <span>{{ ev.organisateur.prenom }}</span>
                                </div>
                            {% else %}
                                <div></div>
                            {% endif %}
                            <div class="ev-card-places">
                                <div class="places-bar">
                                    <div class="places-bar-fill {% if fillPct < 50 %}low{% elseif fillPct < 80 %}medium{% else %}high{% endif %}"
                                         style="width:{{ fillPct }}%;"></div>
                                </div>
                                <span class="text-muted">{{ ev.nbPlaces - reservedCount }}/{{ ev.nbPlaces }}</span>
                            </div>
                        </div>
                    </div>
                    {% if isMine %}
                        <div class="ev-card-owner-line"></div>
                    {% endif %}
                </div>
            </a>
        </div>
    {% endfor %}
</div>

