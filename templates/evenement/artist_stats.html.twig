{% extends 'base.html.twig' %}

{% block title %}Mes stats événements{% endblock %}

{% block body %}
<style>
    .a-stats-head { display:flex; justify-content:space-between; align-items:center; gap:.75rem; flex-wrap:wrap; margin-bottom:1rem; }
    .a-stats-head h1 { margin:0; font-family:'Sora',sans-serif; font-size:1.35rem; font-weight:700; color:var(--ac-deep); }
    .a-stats-grid { display:grid; gap:.75rem; grid-template-columns:repeat(auto-fit,minmax(180px,1fr)); margin-bottom:1rem; }
    .a-kpi { background:#fff; border:1px solid #e9ecef; border-radius:12px; padding:.9rem 1rem; box-shadow:0 2px 10px rgba(0,0,0,.04); }
    .a-kpi .val { font-family:'Sora',sans-serif; font-weight:800; font-size:1.45rem; line-height:1; color:var(--ac-deep); }
    .a-kpi .lbl { font-size:.74rem; color:#6b7280; text-transform:uppercase; font-weight:700; letter-spacing:.04em; margin-top:.3rem; }
    .a-kpi .sub { font-size:.74rem; color:#9ca3af; margin-top:.2rem; }
    .a-card { background:#fff; border:1px solid #e9ecef; border-radius:12px; box-shadow:0 2px 10px rgba(0,0,0,.04); padding:1rem; }
    .a-card h5 { margin:0 0 .7rem; font-family:'Sora',sans-serif; font-size:.9rem; font-weight:700; color:var(--ac-deep); }
    .a-mini-table { width:100%; font-size:.84rem; }
    .a-mini-table th { color:#6b7280; font-size:.74rem; text-transform:uppercase; font-weight:700; padding:.45rem .35rem; border-bottom:2px solid #eef2f7; }
    .a-mini-table td { padding:.5rem .35rem; border-bottom:1px solid #f3f4f6; color:#374151; }
    .a-mini-table tr:last-child td { border-bottom:none; }
</style>

<div class="a-stats-head">
    <h1><i class="fas fa-chart-line me-2"></i> Mes statistiques</h1>
    <div class="d-flex gap-2">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary btn-sm">Mes événements</a>
        <a href="{{ path('app_reservation_artist_owner') }}" class="btn btn-primary btn-sm">Réservations reçues</a>
    </div>
</div>

<div class="a-stats-grid">
    <div class="a-kpi">
        <div class="val">{{ overview.total }}</div>
        <div class="lbl">Événements</div>
        <div class="sub">+{{ events_this_month }} ce mois</div>
    </div>
    <div class="a-kpi">
        <div class="val">{{ overview.upcoming }}</div>
        <div class="lbl">À venir</div>
        <div class="sub">{{ overview.past }} passés</div>
    </div>
    <div class="a-kpi">
        <div class="val">{{ reservations_total }}</div>
        <div class="lbl">Réservations reçues</div>
        <div class="sub">{{ overview.full }} événement{{ overview.full > 1 ? 's' }} complet{{ overview.full > 1 ? 's' }}</div>
    </div>
    <div class="a-kpi">
        <div class="val">{{ overview.total > 0 ? ((overview.totalReservations / overview.total)|number_format(1, '.', ' ')) : 0 }}</div>
        <div class="lbl">Moyenne / événement</div>
        <div class="sub">Réservations par événement</div>
    </div>
</div>

<div class="a-card">
    <h5><i class="fas fa-trophy me-1" style="color:var(--ac-lavender);"></i> Top événements (par réservations)</h5>
    <div class="table-responsive">
        <table class="a-mini-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Événement</th>
                    <th>Lieu</th>
                    <th style="text-align:right;">Réservations</th>
                    <th style="text-align:right;">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for item in top_events %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td class="fw-semibold">{{ item.event.titre }}</td>
                    <td>{{ item.event.lieu }}</td>
                    <td style="text-align:right;"><span class="badge bg-primary bg-opacity-75">{{ item.reservations }}</span></td>
                    <td style="text-align:right;">
                        <a href="{{ path('app_evenement_show', {id: item.event.id}) }}" class="btn btn-sm btn-outline-primary py-0 px-2">Voir</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted py-3">Aucune donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
